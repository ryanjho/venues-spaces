<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <title>Venue Owner Dashboard</title>
</head>
<body>
  <%- include('../partials/navBar') %>
  <div class="container">
    <h1>Welcome <%= user.name %></h1>
    
    <form action="/sessions/users?_method=DELETE" method="POST">
      <input type="submit" value="Log Out" />
    </form>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Venue Booking Date</th>
            <th scope="col">Venue Booking Time</th>
            <th scope="col">Venue Booking Duration</th>
            <th scope="col">Budget</th>
            <th scope="col">Message</th>
            <th scope="col">Venue</th>
          </tr>
        </thead>
        <tbody>
          <% enquiriesWithVenue.forEach( (enquiryVenue, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= enquiryVenue[0].venueBookingDate %></td>
              <td><%= enquiryVenue[0].venueBookingTime %></td>
              <td><%= enquiryVenue[0].venueBookingDuration %></td>
              <td><%= enquiryVenue[0].budget %></td>
              <td><%= enquiryVenue[0].message %></td>
              <td><a href="/venues/<%= enquiryVenue[1].subdirectory %>"><%= enquiryVenue[1].name %></a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>